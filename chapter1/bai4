
import java.util.ArrayList;
import java.util.List;


public class Bai4 {
    public static void main(String[] args){
        List<String> fruits = new ArrayList<>();
        fruits.add("Apple");
        fruits.add("Banana");
        fruits.add("Orange");
        System.out.println("Danh sach hoa qua: " + fruits);

        fruits.add(1, "Mango");
        System.out.println("Danh sach hoa qua sau khi thay doi: " + fruits);

        int vitri = fruits.indexOf("Banana");
        if(vitri != -1){
            fruits.set(vitri, "Grapes");
            System.out.println("Danh sach hoa qua sau khi thay doi: " + fruits);
        } else {
            System.out.println("Khong tim thay Banana trong danh sach.");
        }

        boolean apple = fruits.contains("Apple");
        System.out.println("Danh sach co chua Apple khong? " + apple);
}
}
